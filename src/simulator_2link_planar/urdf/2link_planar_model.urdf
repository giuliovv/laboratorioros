<?xml version="1.0"?>
<robot name="simple_model">

<link name="base_link">
    <visual>
        <geometry>
            <box size="0.2 0.2 0.2"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <material name="yellow">
            <color rgba="1 1 0 1"/>
        </material>
    </visual>
</link>

<joint name="arm_joint" type="continuous">
    <parent link="base_link"/>
    <child link="arm_link"/>
    <origin xyz="0.1 0 0"/>
    <axis xyz="0 0 1" />
</joint>

<link name="arm_link">
    <visual>
        <geometry>
            <cylinder length="1.0" radius="0.05"/>
        </geometry>
        <origin rpy="1.57 0 1.57" xyz="0.5 0 0"/> <!-- reference frame of the visual element with respect to the reference frame of the link -->
        <material name="blue">
            <color rgba="0 0 1 1"/>
        </material>
    </visual>
    <inertial>
        <mass value="2"/> <!-- mass of the link -->
        <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.17" iyz="0.0" izz="0.17"/> <!-- inertia matrix, represented in the inertia frame -->
        <origin rpy="0 0 0" xyz="0.5 0 0.0"/> <!-- pose of the inertial reference frame, relative to the link reference frame -->
    </inertial>
</link>

<joint name="forearm_joint" type="continuous">
    <parent link="arm_link"/>
    <child link="forearm_link"/>
    <origin xyz="1.0 0 0"/>
    <axis xyz="0 0 1" />
</joint>

<link name="forearm_link">
    <visual>
        <geometry>
            <cylinder length="1.0" radius="0.05"/>
        </geometry>
        <origin rpy="1.57 0 1.57" xyz="0.5 0 0"/> <!-- reference frame of the visual element with respect to the reference frame of the link -->
        <material name="blue">
            <color rgba="0 0 1 1"/>
        </material>
    </visual>
    <inertial>
        <mass value="1"/> <!-- mass of the link -->
        <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.085" iyz="0.0" izz="0.085"/> <!-- inertia matrix, represented in the inertia frame -->
        <origin rpy="0 0 0" xyz="0.5 0 0.0"/>  <!-- pose of the inertial reference frame, relative to the link reference frame -->
    </inertial>
</link>

<joint name="ultimoarm_joint" type="continuous">
    <parent link="forearm_link"/>
    <child link="ultimoarm_link"/>
    <origin xyz="1.0 0 0"/>
    <axis xyz="0 0 1" />
</joint>

<link name="ultimoarm_link">
    <visual>
        <geometry>
            <cylinder length="1.0" radius="0.05"/>
        </geometry>
        <origin rpy="1.57 0 1.57" xyz="0.5 0 0"/> <!-- reference frame of the visual element with respect to the reference frame of the link -->
        <material name="blue">
            <color rgba="0 0 1 1"/>
        </material>
    </visual>
    <inertial>
        <mass value="1"/> <!-- mass of the link -->
        <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.085" iyz="0.0" izz="0.0425"/> <!-- izz = izz_sopra /2 -->
        <origin rpy="0 0 0" xyz="0.5 0 0.0"/>  <!-- pose of the inertial reference frame, relative to the link reference frame -->
    </inertial>
</link>
</robot>


